<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.susqu.math.kubota.travellogger" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TravelLogActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SigninActivity"
            android:label="@string/title_activity_signin" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogListActivity"
            android:label="@string/title_activity_log_list" >
        </activity>
        <activity
            android:name=".TravelPagerActivity"
            android:label="@string/title_activity_travel_pager" >
        </activity>

        <service
            android:name=".LocationManagementService"
            android:exported="false" >
        </service>
    </application>

</manifest>
